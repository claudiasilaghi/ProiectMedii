@page
@model ProiectMedii.Pages.Restaurante.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Restaurant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Restaurant.ID" />
            <div class="form-group">
                <label asp-for="Restaurant.Nume" class="control-label"></label>
                <input asp-for="Restaurant.Nume" class="form-control" />
                <span asp-validation-for="Restaurant.Nume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Restaurant.AdresaID" class="control-label">Strada si nr</label>
                <select asp-for="Restaurant.AdresaID" class="form-control" asp-items="ViewBag.StradaNr">
                </select>
                <span asp-validation-for="Restaurant.AdresaID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Restaurant.AdresaID" class="control-label">Oras si judet</label>
                <select asp-for="Restaurant.AdresaID" class="form-control" asp-items="ViewBag.OrasJudet">
                </select>
                <span asp-validation-for="Restaurant.AdresaID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Restaurant.Rating" class="control-label"></label>
                <input asp-for="Restaurant.Rating" class="form-control" />
                <span asp-validation-for="Restaurant.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
